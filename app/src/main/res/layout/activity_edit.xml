<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleEffectActivity">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="60dp" />

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="4dp"
            android:orientation="horizontal"
            android:gravity="bottom">

            <!-- Brightness button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="@string/bright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btn_text_size" />

                <Button
                    android:id="@+id/bright_btn"
                    android:drawableStart="@drawable/icon_brightness"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:layout_marginHorizontal="@dimen/btn_margin"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_btn"
                    android:padding="@dimen/btn_padding" />

            </LinearLayout>

            <!-- Contrast button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="@string/contrast"
                    android:textSize="@dimen/btn_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/contrast_btn"
                    android:drawableStart="@drawable/icon_contrast"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:layout_marginHorizontal="@dimen/btn_margin"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_btn"
                    android:padding="@dimen/btn_padding" />

            </LinearLayout>

            <!-- Saturation button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="@string/saturation"
                    android:textSize="@dimen/btn_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/saturation_btn"
                    android:drawableStart="@drawable/icon_saturation"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:layout_marginHorizontal="@dimen/btn_margin"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_btn"
                    android:padding="@dimen/btn_padding" />

            </LinearLayout>

            <!-- Denoise button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="@string/denoise"
                    android:textSize="@dimen/btn_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/denoise_btn"
                    android:drawableStart="@drawable/icon_denoise"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:layout_marginHorizontal="@dimen/btn_margin"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_btn"
                    android:padding="@dimen/btn_padding" />

            </LinearLayout>

            <!-- Noise button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="@string/noise"
                    android:textSize="@dimen/btn_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/noise_btn"
                    android:drawableStart="@drawable/icon_noise"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:layout_marginHorizontal="@dimen/btn_margin"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_btn"
                    android:padding="@dimen/btn_padding" />

            </LinearLayout>

            <!-- Double exposure button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="@string/double_exp"
                    android:textSize="@dimen/btn_text_size"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/double_exp_btn"
                    android:drawableStart="@drawable/icon_double_exp"
                    android:layout_width="@dimen/btn_size"
                    android:layout_height="@dimen/btn_size"
                    android:layout_marginHorizontal="@dimen/btn_margin"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_btn"
                    android:padding="@dimen/btn_padding" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
